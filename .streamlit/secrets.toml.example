# Streamlit Cloud Secrets Configuration
# Copy this to secrets.toml and fill in your actual values
# DO NOT commit secrets.toml to git!

[openai]
api_key = "sk-your-openai-api-key-here"

[robinhood]
csv_path = "/mount/data/stocks_data.csv"  # Path in Streamlit Cloud storage

# Authentication (protects your LLM token from unauthorized use)
# Only required for production deployment
# Local development runs without authentication
[auth]
username = "your-username"
password = "your-secure-password"
# Optional: secret_key for token generation (defaults to password if not set)
# secret_key = "your-random-secret-key-for-cookies"
