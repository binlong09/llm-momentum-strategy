# Streamlit Cloud Secrets Configuration
# Copy this to secrets.toml and fill in your actual values
# DO NOT commit secrets.toml to git!

# OpenAI API Key (REQUIRED for AI Portfolio Optimizer)
# Get key at: https://platform.openai.com/api-keys
[openai]
api_key = "sk-your-openai-api-key-here"

# Alpha Vantage API Key (REQUIRED for stock price data)
# Get free key at: https://www.alphavantage.co/support/#api-key
# Note: Falls back to yfinance if not configured
[alpha_vantage]
api_key = "your-alpha-vantage-api-key-here"

# Robinhood Data Path
[robinhood]
csv_path = "/mount/data/stocks_data.csv"  # Path in Streamlit Cloud storage

# Authentication (protects your LLM token from unauthorized use)
# Only required for production deployment
# Local development runs without authentication
[auth]
username = "your-username"
password = "your-secure-password"
# Optional: secret_key for token generation (defaults to password if not set)
# secret_key = "your-random-secret-key-for-cookies"

# NewsAPI Key (OPTIONAL - currently disabled)
# Get key at: https://newsapi.org/register
# News is fetched from free RSS feeds instead
# [newsapi]
# api_key = "your-newsapi-key-here"
# enabled = false
